---
import { Image } from "astro:assets";

import BaseLayout from "../../layouts/BaseLayout.astro";
import Icon from "../../components/Icon.astro";
import HoverSlide from "../../components/HoverSlide.astro";
import { getAlbumImages } from "../../utils";
import { albums } from "../photography.astro";

export async function getStaticPaths() {
    return Object.values(albums).map((album) => (
        {
            params: {
                id: album.id,
            },
            props: {
                album,
            },
        }
    ));
}

const { album } = Astro.props;
const [smalls, images] = await getAlbumImages(album.id);

const title = album.data.title;
const alt = `An image from the album: [${title}]`;
---
<BaseLayout>
    <div id="album-page" class="flex flex-col flex-wrap gap-3 text-center mt-0 lg:mt-20 justify-center items-center">
        <div>
            <h1 class="text-4xl font-extrabold drop-shadow-lg">
                {title}
            </h1>
            <p class="font-zh text-2xl text-slate-100 p-1">{album.data.short_description}</p>
        </div>
        <p class="w-4/5 lg:w-1/2 pb-0 lg:pb-5 text-md opacity-75 font-sans">
            {album.data.description}
        </p>
        <p>
            <strong class="text-slate-200 drop-shadow-md font-semibold">
                {images.length} Photos
            </strong>
        </p>
        <div class="px-2 sm:px-0 mx-auto container my-8 sm:columns-2 md:columns-3 lg:columns-4 xl:columns-4">
            {
                smalls.map((image) => (
                    <Image
                        src={image}
                        alt={alt}
                        class={
                            `shadow-md mb-4 hover:scale-[102%] opacity-90
                            border-8 border-white transition-all duration-300 ease-in-out`
                        }
                        loading="lazy"
                        decoding="async"
                        data-album-image
                    />
                ))
            }
        </div>
        <div class="text-slate-200 drop-shadow-md font-semibold mt-0 lg:mt-10">
            <HoverSlide text="View More Albums â†’" href="/photography"/>
        </div>
    </div>
    <div
        id="modal"
        class="hidden fixed z-50 left-0 top-0 w-dvw h-dvh
        bg-black bg-opacity-75 backdrop-blur-md"
    >
        <Icon
            img="close"
            target="_self"
            size="4em"
            styles="close-btn absolute z-50 top-4 right-4 text-slate-100"
        />
        <div class="swiper-body w-full h-full overflow-x-hidden">
            <div class="swiper gallery-swiper w-full h-full">
                <div id="swiper-container" class="swiper-wrapper">
                    {
                        images.map((slide) => (
                            <div class="swiper-slide">
                                <div class="w-full h-full p-5 flex flex-col gap-3 justify-center items-center">
                                    <div class="flex justify-center items-center grow min-h-0">
                                        <!-- defer loading by using data-src and no src attribute -->
                                        <img
                                            data-src={slide.src}
                                            alt={alt}
                                            class="block max-h-full w-auto"
                                            decoding="async"
                                            loading="lazy"
                                        />
                                    </div>
                                    <p class="caption text-center font-sm font-sans text-slate-100 text-wrap"></p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    import Swiper from 'swiper';
    import { Keyboard, EffectCoverflow } from 'swiper/modules';

    import 'swiper/css';

    import { formatImageEXIF } from "../../utils";

    document.addEventListener('astro:page-load', () => {
        if (document.getElementById('album-page') == null) {
            return;
        }

        const swiper = new Swiper('.gallery-swiper', {
            modules: [Keyboard, EffectCoverflow],
            effect: 'coverflow',
            loop: true,
            grabCursor: true,
            centeredSlides: true,
            keyboard: true,
            slidesPerView: 1,
            spaceBetween: 75,
            direction: 'vertical',
            breakpoints: {
                768: {
                    direction: 'horizontal',
                },
            },
        });

        const modal = document.getElementById('modal');

        // lazily populate captions after images are loaded
        function attachCaptionHandlers() {
            modal?.querySelectorAll('div.swiper-slide')
                ?.forEach((slide) => {
                    const img = slide.querySelector<HTMLImageElement>('img[data-src]');
                    const captionEl = slide.querySelector('p.caption');
                    if (!img || !captionEl) return;

                    // If image is already loaded, generate caption immediately
                    if (img.complete && img.naturalWidth !== 0) {
                        (async () => {
                            captionEl.innerHTML = await formatImageEXIF(img, img.getAttribute('data-src')!);
                        })();
                        return;
                    }

                    // Otherwise wait for load and then generate caption
                    img.addEventListener('load', async () => {
                        captionEl.innerHTML = await formatImageEXIF(img, img.getAttribute('data-src')!);
                    }, { once: true });
                });
        }

        modal?.querySelector('.close-btn')
            ?.addEventListener('click', (event) => {
                modal.style.display = 'none';
                event.stopPropagation();
            });

        document.querySelectorAll('[data-album-image]')
            ?.forEach((image, idx) => {
                image.addEventListener('click', () => {
                    // only set src attributes when modal is opened to avoid network activity during initial render
                    modal?.querySelectorAll('img[data-src]')
                        ?.forEach((img) => {
                            if (!img.getAttribute('src')) {
                                img.setAttribute('src', img.getAttribute('data-src')!);
                            }
                        });

                    // ensure captions are hooked up after giving the browser a moment to start loading images
                    attachCaptionHandlers();

                    swiper.slideToLoop(idx, 0);
                    modal!.style.display = 'block';
                });
            });
    });
</script>