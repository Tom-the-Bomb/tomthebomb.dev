---
import { Image } from "astro:assets";

import blobComfy from "../../public/blobcomfy.png";
import BaseLayout from "../layouts/BaseLayout.astro";
import HoverSlide from "../components/HoverSlide.astro";
---

<BaseLayout>
	<div class="flex flex-wrap justify-center grow gap-20">
		<div class="flex flex-col items-center gap-10">
			<div class="flex flex-col gap-3">
				<h2 class="w-fit lg:text-4xl md:text-3xl text-2xl text-yellow-100 drop-shadow-lg">
					Hello I am
				</h2>
				<h1 class="w-fit lg:text-7xl md:text-6xl text-5xl font-mono font-extrabold typewriter">
					Tom the Bomb
				</h1>
			</div>
            <hr class="self-start w-1/2"/>
			<ul class="fancy-list flex flex-col self-start text-xl text-yellow-100">
				<li><HoverSlide text="About" href="/about"/></li>
				<li><HoverSlide text="Projects" href="/projects"/></li>
				<li><HoverSlide text="Photography" href="/photography"/></li>
				<li><HoverSlide text="Aquaria" href="/photography/aquaria"/></li>
			</ul>
		</div>
		<div class="flex">
			<div class="glass mt-5 p-7 rounded-full h-[13em] w-[13em] flex justify-center items-center">
                <Image
                    src={blobComfy}
                    alt="Blob Comfy"
                    class="w-auto h-auto hue-rotate-[30deg] brightness-90 opacity-75"
                    loading="lazy"
                    decoding="async"
                />
            </div>
		</div>
	</div>
</BaseLayout>