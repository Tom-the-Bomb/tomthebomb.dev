---
import Icon from "./Icon.astro";

interface Props {
    title: string;
    icon: string;
}

const { title, icon } = Astro.props;
---

<div class="flex flex-col gap-3">
    <h2
        class="flex flex-wrap items-center gap-3 text-2xl font-extrabold text-yellow-100 drop-shadow-lg md:text-3xl"
    >
        {title}
        <Icon size="1em" img={icon} target="_self" styles="" />
    </h2>
    <hr class="w-1/2" />
    <div class="text-lg drop-shadow-md"><slot /></div>
</div>
