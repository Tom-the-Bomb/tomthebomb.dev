---
import Icon from './Icon.astro';

interface Props {
	text?: string | undefined
}

const {
	text = 'Tom the Bomb 2024'
} = Astro.props;

---
<footer class="relative p-8 text-xl text-center flex-none">
    <div class="p-5 gap-3 flex flex-row flex-wrap justify-center">
        <Icon img="github" href="https://github.com/Tom-the-Bomb"/>
        <Icon img="discord" href="https://discord.com/users/522524473447153695"/>
        <Icon img="leetcode" href="https://leetcode.com/u/Tom-the-Bomb/"/>
    </div>
    <a class="relative inline-block effect-underline">{text}<a/>
    <div class="squares">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </div>
</footer>

<style>
    .squares {
        position: absolute;
        bottom: 0;
        left: 0;

        width: 100%;
        height: 200dvh;

        overflow: hidden;
        z-index: -1000;
    }

    .squares li {
        position: absolute;
        display: block;
        list-style: none;
        width: 20px;
        height: 20px;
        background: rgba(255, 255, 255, 0.2);
        animation: squares infinite linear;
        bottom: -150px;
        border-radius: 10%;
    }

    .squares li:nth-child(1){
        left: 25%;
        width: 80px;
        height: 80px;
        animation-delay: 0s;
        animation-duration: 50s;
    }

    .squares li:nth-child(2){
        left: 10%;
        width: 20px;
        height: 20px;
        animation-delay: 2s;
        animation-duration: 24s;
    }

    .squares li:nth-child(3){
        left: 70%;
        width: 20px;
        height: 20px;
        animation-delay: 4s;
        animation-duration: 50s;
    }

    .squares li:nth-child(4) {
        left: 40%;
        width: 60px;
        height: 60px;
        animation-delay: 0s;
        animation-duration: 36s;
    }

    .squares li:nth-child(5) {
        left: 65%;
        width: 20px;
        height: 20px;
        animation-delay: 0s;
        animation-duration: 50s;
    }

    .squares li:nth-child(6) {
        left: 75%;
        width: 110px;
        height: 110px;
        animation-delay: 3s;
        animation-duration: 50s;
    }

    .squares li:nth-child(7) {
        left: 35%;
        width: 150px;
        height: 150px;
        animation-delay: 7s;
        animation-duration: 50s;
    }

    .squares li:nth-child(8) {
        left: 50%;
        width: 25px;
        height: 25px;
        animation-delay: 15s;
        animation-duration: 90s;
    }

    .squares li:nth-child(9) {
        left: 20%;
        width: 15px;
        height: 15px;
        animation-delay: 2s;
        animation-duration: 70s;
    }

    .squares li:nth-child(10) {
        left: 85%;
        width: 150px;
        height: 150px;
        animation-delay: 0s;
        animation-duration: 22s;
    }

    @keyframes squares {
        from {
            transform: translateY(0) rotate(0deg);
            opacity: 1;
            border-radius: 10%;
        }
        to {
            transform: translateY(-200dvh) rotate(720deg);
            opacity: 0;
            border-radius: 50%;
        }
    }
</style>